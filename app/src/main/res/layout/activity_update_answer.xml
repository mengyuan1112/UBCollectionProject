<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Answer"
        android:id="@+id/update_answer_instructions"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        >
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_answer_field"
        android:layout_below="@+id/update_answer_instructions"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_answer_button"
        android:text="Update"
        android:layout_below="@+id/update_answer_field"/>




</RelativeLayout>